{
    "env": {
        "browser": true,
        "es2021": true
    },
    "extends": [
        "eslint:recommended",
        "plugin:@typescript-eslint/recommended",
        "plugin:prettier/recommended"
    ],
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "plugins": [
        "@typescript-eslint",
        "react",
        "react-hooks",
        "import",
        "simple-import-sort"
    ],
    "rules": {
      // Import sorting
      "simple-import-sort/imports": "error",
      "simple-import-sort/exports": "error",
  
      // Optional: Enforce best practices for import/export syntax
      "import/first": "error",
      "import/newline-after-import": "error",
      "import/no-duplicates": "error",
      "import/order": [
        "error",
        {
          "groups": [["builtin", "external"], ["internal", "sibling", "parent", "index"]],
          "newlines-between": "always"
        }
      ]
    },
    "settings": {
      "react": {
        "version": "detect"
      }
    }
}
